<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallPaper_cardView"
    android:layout_margin="12dp"
    app:cardCornerRadius="26dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/blue"
    >
    <ImageView
        android:id="@+id/wallPaper_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/wallpaper_image"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/wallPaperUser_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="gravity"
        tools:text="@string/WallPaperUser"
        app:layout_constraintTop_toBottomOf="@id/wallPaper_imageView"
        app:layout_constraintStart_toStartOf="@id/wallPaper_imageView"
        app:layout_constraintEnd_toEndOf="@id/wallPaper_imageView"
        />

        <TextView
            android:id="@+id/wallPaperViews_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAlignment="gravity"
            tools:text="@string/WallPaperViews"
            app:layout_constraintTop_toBottomOf="@id/wallPaperUser_textView"
            app:layout_constraintStart_toStartOf="@id/wallPaper_imageView"
            app:layout_constraintEnd_toEndOf="@id/wallPaper_imageView"
            />

        <TextView
            android:id="@+id/wallPaperLikes_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAlignment="gravity"
            tools:text="@string/WallPaperLikes"
            app:layout_constraintTop_toBottomOf="@id/wallPaperViews_textView"
            app:layout_constraintStart_toStartOf="@id/wallPaper_imageView"
            app:layout_constraintEnd_toEndOf="@id/wallPaper_imageView"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>